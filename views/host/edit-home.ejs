<%- include('../partials/head') %>
    <style>
        .bg-pattern {
            background-image: url('https://images.unsplash.com/photo-1564013799919-ab600027ffc6?auto=format&fit=crop&q=80');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }
    </style>
  </head>
  <body class="bg-pattern min-h-screen">
    <%- include('../partials/nav') %>
    <div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8 backdrop-blur-sm bg-black/30">
      <main class="container mx-auto">
        <!-- Header Section -->
        <div class="text-center mb-8">
          <h1 class="text-4xl font-bold text-white mb-2">
            <%= editing? "Edit" : "List" %> Your Property
          </h1>
          <p class="text-gray-200 text-lg">
            <%= editing? "Update your property details to attract more guests" : "Share your space and start earning" %>
          </p>
        </div>

        <!-- Form Card -->
        <div class="max-w-2xl mx-auto bg-white/95 backdrop-blur-md rounded-2xl shadow-2xl p-8">
          <form action="/host/<%= editing? 'edit-home': 'add-home' %>" method="POST" class="space-y-6" enctype="multipart/form-data">
            <input type="hidden" name="id" value="<%= editing ? home._id :'' %>">
            
            <!-- House Name -->
            <div class="relative group">
              <label class="block text-sm font-medium text-gray-700 mb-1">House Name</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                  </svg>
                </div>
                <input
                  type="text"
                  value="<%= editing ? home.houseName:null %>"
                  name="houseName"
                  placeholder="Enter your House Name"
                  class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-300"
                />
              </div>
            </div>

            <!-- Price -->
            <div class="relative group">
              <label class="block text-sm font-medium text-gray-700 mb-1">Price Per Night</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <span class="text-gray-400">$</span>
                </div>
                <input
                  type="text"
                  value="<%= editing ? home.price:null %>"
                  name="price"
                  placeholder="Enter price per night"
                  class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-300"
                />
              </div>
            </div>

            <!-- Location -->
            <div class="relative group">
              <label class="block text-sm font-medium text-gray-700 mb-1">Location</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  </svg>
                </div>
                <input
                  type="text"
                  value="<%= editing ? home.location:null%>"
                  name="location"
                  placeholder="Enter location"
                  class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-300"
                />
              </div>
            </div>

            <!-- Rating -->
            <div class="relative group">
              <label class="block text-sm font-medium text-gray-700 mb-1">Rating</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                </div>
                <input
                  type="text"
                  value="<%= editing ? home.rating:null %>"
                  name="rating"
                  placeholder="Enter rating (1-5)"
                  class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-300"
                />
              </div>
            </div>

            <!-- Description -->
            <div class="relative group">
              <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
              <textarea
                name="description"
                placeholder="Describe your property in detail"
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-300 min-h-[120px]"
              ><%= editing ? home.description:null %></textarea>
            </div>

            <!-- Photo Upload -->
            <div class="relative group">
              <label class="block text-sm font-medium text-gray-700 mb-1">Property Photos</label>
              <div class="relative">
                <input
                  type="file"
                  name="photo"
                  accept="image/jpg, image/jpeg, image/png, image/avif"
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-300"
                />
              </div>
            </div>

            <!-- Submit Button -->
            <div class="relative group pt-4">
              <div class="absolute -inset-0.5 bg-gradient-to-r from-red-600 to-pink-600 rounded-xl blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200 animate-tilt"></div>
              <button type="submit" class="relative w-full px-8 py-3 bg-white rounded-xl leading-none flex items-center justify-center divide-x divide-gray-600">
                <span class="text-red-600 group-hover:text-red-500 transition duration-200 font-semibold text-lg">
                  <%= editing ? "Update Property" : "List Property" %>
                </span>
              </button>
            </div>
      </form>
    </main>
  </body>
</html>