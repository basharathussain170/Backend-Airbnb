<%- include('../partials/head') %>
  <style>
    .bg-pattern {
      background-color: #f8fafc;
      background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%234338ca' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    }
  </style>
  </head>
  <body class="bg-pattern min-h-screen">
    <%- include('../partials/nav') %>
    <!-- Hero Section -->
    <div class="relative overflow-hidden bg-gradient-to-b from-indigo-600/90 to-purple-600/90 text-white py-16 mb-12">
      <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
      <div class="container mx-auto px-6 relative z-10">
        <h1 class="text-4xl md:text-5xl font-bold text-center mb-4">
          Find Your Perfect Stay
        </h1>
        <p class="text-xl text-center text-indigo-100 max-w-2xl mx-auto">
          Discover unique places to stay and unforgettable experiences
        </p>
      </div>
    </div>

    <main class="container mx-auto px-6 py-8 max-w-7xl">
      <!-- Filters Section -->
      <div class="flex flex-wrap items-center justify-between mb-8 gap-4">
        <h2 class="text-3xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
          Featured Places
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% registeredHomes.forEach(home => { %>
          <div class="group bg-white/80 backdrop-blur-sm rounded-2xl overflow-hidden hover:shadow-xl transition-all duration-500 border border-white/20">
            <!-- Image Container -->
            <div class="relative overflow-hidden">
              <img src="<%= home.photo %>" alt="<%= home.houseName %>" 
                   class="w-full h-64 object-cover transform transition-transform duration-500 group-hover:scale-110">
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              
              <!-- Quick Action Buttons -->
              <div class="absolute bottom-4 left-4 right-4 flex justify-between items-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <span class="bg-white/90 backdrop-blur-sm text-indigo-600 px-4 py-2 rounded-full text-sm font-semibold">
                  View Details
                </span>
                <button class="bg-indigo-600 text-white p-2 rounded-full hover:bg-indigo-700 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                  </svg>
                </button>
              </div>
            </div>

            <!-- Content -->
            <div class="p-4">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <h3 class="text-xl font-semibold text-gray-800 mb-2 group-hover:text-indigo-600 transition-colors">
                    <%= home.houseName %>
                  </h3>
                  <p class="text-gray-600 flex items-center">
                    <svg class="w-4 h-4 text-indigo-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    </svg>
                    <%= home.location %>
                  </p>
                </div>
                <div class="flex items-center bg-yellow-50 px-3 py-1 rounded-full">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd"/>
                  </svg>
                  <span class="font-semibold text-gray-700"><%= home.rating %></span>
                </div>
              </div>

              <div class="flex justify-between items-center">
                <div>
                  <span class="text-2xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
                    â‚¹<%= home.price %>
                  </span>
                  <span class="text-gray-500">/night</span>
                </div>
                <a href="<%= isLoggedIn ? '/bookings' : '/login' %>" class="relative group/btn">
                  <div class="absolute -inset-0.5 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-lg blur opacity-40 group-hover/btn:opacity-100 transition duration-200"></div>
                  <div class="relative px-6 py-2 bg-white rounded-lg group-hover/btn:bg-gradient-to-r from-indigo-500 to-purple-500 group-hover/btn:text-white transition-all duration-300">
                    Book Now
                  </div>
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </main>

    <!-- Floating Action Button -->
    <button onclick="window.scrollTo({top: 0, behavior: 'smooth'})" 
            class="fixed bottom-8 right-8 p-3 bg-white/80 backdrop-blur-sm rounded-full shadow-lg hover:shadow-xl transform transition-all duration-300 hover:scale-110 hover:-translate-y-1 border border-white/20">
      <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
      </svg>
    </button>

    <!-- Search Overlay -->
    <div class="fixed bottom-0 left-0 right-0 bg-white/80 backdrop-blur-xl border-t border-white/20 py-4 px-6 transform transition-transform duration-300 translate-y-full hover:translate-y-0">
      <div class="container mx-auto max-w-7xl">
        <div class="flex items-center justify-between gap-4">
          <div class="flex-1">
            <input type="text" placeholder="Search for places..." 
                   class="w-full px-4 py-2 rounded-lg bg-white/50 border border-gray-200 focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
          </div>
          <button class="px-6 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-lg hover:shadow-lg transition-shadow duration-300">
            Search
          </button>
        </div>
      </div>
    </div>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>