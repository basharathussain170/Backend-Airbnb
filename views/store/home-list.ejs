<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
    <%- include('../partials/nav') %>
    <main class="container mx-auto px-4 py-12 max-w-7xl">
      <!-- Header Section -->
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-red-600 to-red-400 mb-4">
          Discover Amazing Homes
        </h2>
        <p class="text-gray-600 text-lg">Find your perfect stay from our curated collection</p>
      </div>

      <!-- Grid Container -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% registeredHomes.forEach(home => { %>
          <div class="group relative bg-white rounded-2xl shadow-lg overflow-hidden transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
            <!-- Image Container -->
            <div class="relative h-64 overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500 z-10"></div>
              <img src="<%= home.photo %>" class="w-full h-full object-cover transform transition-transform duration-500 group-hover:scale-110" alt="<%= home.houseName %>">
            </div>

            <!-- Content Container -->
            <div class="p-6 space-y-4">
              <!-- Title and Location -->
              <div>
                <h3 class="text-xl font-semibold text-gray-800 group-hover:text-red-500 transition-colors duration-300">
                  <%= home.houseName %>
                </h3>
                <p class="flex items-center text-gray-600 mt-2">
                  <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <%= home.location %>
                </p>
              </div>

              <!-- Price and Rating -->
              <div class="flex justify-between items-center py-2 border-t border-gray-100">
                <div class="flex items-center space-x-1">
                  <span class="text-sm text-gray-500">Starting from</span>
                  <span class="text-2xl font-bold text-red-500">$<%= home.price %></span>
                  <span class="text-gray-500">/night</span>
                </div>
                <div class="flex items-center bg-yellow-50 px-3 py-1 rounded-full">
                  <svg class="w-5 h-5 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span class="font-medium text-gray-700"><%= home.rating %></span>
                </div>
              </div>

              <!-- Action Buttons -->
              <div class="flex flex-col space-y-3 pt-3">
                <a href="/homes/<%= home._id %>" class="relative group overflow-hidden">
                  <div class="absolute -inset-1 bg-gradient-to-r from-red-600 via-pink-500 to-purple-600 rounded-xl blur opacity-50 group-hover:opacity-75 animate-gradient-xy transition-all duration-500"></div>
                  <div class="relative flex items-center justify-center space-x-3 bg-white px-6 py-3.5 rounded-lg font-semibold text-red-500 shadow-md transition-all duration-300 hover:shadow-xl hover:bg-red-50/90 active:scale-[0.98] backdrop-blur-sm">
                    <svg class="w-5 h-5 transition-all duration-300 group-hover:scale-110 group-hover:rotate-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    <span class="group-hover:text-red-600 transition-colors duration-300">View Details</span>
                    <svg class="w-5 h-5 opacity-0 -translate-x-full transition-all duration-300 group-hover:opacity-100 group-hover:translate-x-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </div>
                </a>
                <div class="w-full">
                  <%- include('../partials/favourite',{home:home}) %>
                </div>
              </div>

              <style>
                @keyframes gradient-xy {
                  0%, 100% {
                    background-position: 0% 50%;
                    transform: scale(1);
                  }
                  50% {
                    background-position: 100% 50%;
                    transform: scale(1.1);
                  }
                }
                .animate-gradient-xy {
                  animation: gradient-xy 15s ease infinite;
                  background-size: 400% 400%;
                }
              </style>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Empty State (If no homes) -->
      <% if (registeredHomes.length === 0) { %>
        <div class="text-center py-16">
          <div class="mb-6">
            <svg class="w-16 h-16 text-gray-400 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
          </div>
          <h3 class="text-2xl font-semibold text-gray-800 mb-2">No homes available</h3>
          <p class="text-gray-600">Check back later for new listings</p>
        </div>
      <% } %>
    </main>

    <!-- Scroll to top button -->
    <button onclick="window.scrollTo({top: 0, behavior: 'smooth'})" 
            class="fixed bottom-8 right-8 z-50 group hidden md:block">
      <div class="absolute -inset-0.5 rounded-full bg-gradient-to-r from-red-600 to-pink-600 opacity-75 blur transition duration-300 group-hover:opacity-100"></div>
      <div class="relative flex h-12 w-12 items-center justify-center rounded-full bg-white text-red-500 shadow-2xl transition-all duration-300 group-hover:scale-110">
        <svg class="h-6 w-6 transition-transform duration-300 group-hover:-translate-y-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
        </svg>
      </div>
    </button>
  </body>
</html>