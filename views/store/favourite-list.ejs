<%- include('../partials/head') %>
  <style>
    .heart-bg {
      background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M30 0C13.44 0 0 13.44 0 30c0 16.56 13.44 30 30 30s30-13.44 30-30C60 13.44 46.56 0 30 0zm0 54C16.75 54 6 43.25 6 30S16.75 6 30 6s24 10.75 24 24-10.75 24-24 24zm8.4-36.8c-4.2 0-7.8 3.6-7.8 7.8s3.6 7.8 7.8 7.8 7.8-3.6 7.8-7.8-3.6-7.8-7.8-7.8z' fill='%23FF1A1A' fill-opacity='0.05'/%3E%3C/svg%3E");
    }
  </style>
  </head>
  <body class="min-h-screen bg-gray-50 heart-bg">
    <%- include('../partials/nav') %>
    <main class="container mx-auto px-4 py-12">
      <!-- Header Section -->
      <div class="text-center mb-12 transform hover:scale-105 transition-transform duration-300">
        <h1 class="text-4xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-red-500 to-pink-500 mb-4 inline-block">
          Your Favorite Stays
        </h1>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">
          A collection of places that caught your eye. Each one handpicked by you.
        </p>
      </div>

      <!-- Grid Layout -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        <% favouriteHomes.forEach(home => { %>
          <div class="group relative bg-white rounded-2xl shadow-md overflow-hidden transform hover:-translate-y-1 transition-all duration-500 hover:shadow-2xl">
            <!-- Image Container with Overlay -->
            <div class="relative overflow-hidden aspect-w-16 aspect-h-9">
              <img 
                src="<%= home.photo %>" 
                alt="<%= home.houseName %>" 
                class="w-full h-64 object-cover transform group-hover:scale-110 transition-transform duration-700"
              >
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              
              <!-- Rating Badge -->
              <div class="absolute top-4 right-4 backdrop-blur-md bg-white/30 rounded-full px-3 py-1 flex items-center space-x-1">
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                <span class="text-white font-medium"><%= home.rating %></span>
              </div>
            </div>

            <!-- Content Section -->
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-red-500 transition-colors duration-300">
                <%= home.houseName %>
              </h3>
              
              <div class="flex items-center text-gray-600 mb-4">
                <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                </svg>
                <span class="group-hover:text-gray-900 transition-colors duration-300">
                  <%= home.location %>
                </span>
              </div>

              <!-- Price Section -->
              <div class="flex items-center justify-between mb-6">
                <div class="flex items-baseline">
                  <span class="text-2xl font-bold text-red-500">â‚¹<%= home.price %></span>
                  <span class="text-gray-500 text-sm ml-1">/night</span>
                </div>
              </div>

              <!-- Action Button -->
              <div class="space-y-4">
                <!-- Remove from Favorites Button -->
                <form action="/favourites/delete/<%= home._id %>" method="post" class="relative group/btn">
                    <div class="absolute -inset-0.5 bg-gradient-to-r from-pink-600 to-red-600 rounded-xl blur opacity-75 group-hover/btn:opacity-100 transition duration-1000 group-hover/btn:duration-200 animate-tilt"></div>
                    <button 
                        type="submit" 
                        class="relative w-full px-6 py-3 bg-white rounded-xl leading-none flex items-center justify-center space-x-3 group-hover/btn:bg-gradient-to-r from-pink-600 to-red-600 group-hover/btn:text-white transition-all duration-300"
                        onclick="return confirm('Are you sure you want to remove this property from favorites?')"
                    >
                        <svg class="w-5 h-5 text-pink-600 group-hover/btn:text-white transition-colors duration-300" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
                        </svg>
                        <span class="font-medium">Remove from Favorites</span>
                    </button>
                </form>

                <!-- View Details Link -->
                <a href="/homes/<%= home._id %>" 
                   class="relative group/link block">
                    <div class="absolute -inset-0.5 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-xl blur opacity-50 group-hover/link:opacity-100 transition duration-300"></div>
                    <div class="relative w-full px-6 py-3 bg-white rounded-xl flex items-center justify-center space-x-3 group-hover/link:bg-gradient-to-r from-indigo-500 to-purple-500 group-hover/link:text-white transition-all duration-300">
                        <svg class="w-5 h-5 text-indigo-500 group-hover/link:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        <span class="font-medium">View Details</span>
                    </div>
                </a>
                </div>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Empty State -->
      <% if (favouriteHomes.length === 0) { %>
        <div class="text-center py-16">
          <div class="w-24 h-24 mx-auto mb-6 relative">
            <div class="absolute inset-0 bg-red-100 rounded-full animate-ping"></div>
            <div class="relative flex items-center justify-center w-full h-full bg-white rounded-full shadow-lg">
              <svg class="w-12 h-12 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2">No Favorites Yet</h3>
          <p class="text-gray-600 mb-8 max-w-md mx-auto">Start exploring amazing properties and add them to your favorites to see them here!</p>
          <a 
            href="/" 
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-gradient-to-r from-red-500 to-pink-500 hover:from-red-600 hover:to-pink-600 transition-all duration-300 shadow-lg hover:shadow-xl"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            Explore Properties
          </a>
        </div>
      <% } %>
    </main>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>